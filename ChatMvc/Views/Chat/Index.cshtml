@model ChatModals.Dto.ChatViewDto


<div class="myModal" tabindex="-1" role="dialog" style="display:block" id="nickName_modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">NickName</h5>
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>*@
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="nickname">Your NickName</label>
                    <input type="text" class="form-control" id="nickname_input" aria-describedby="nickNameHelp" placeholder="Enter email">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="setNickName()">Save changes</button>
            </div>
        </div>
    </div>
</div>


<div class="chat-container">
    <div class="chat-container-message">
        <div class="card" id="card_1" style="margin-bottom:20px">
            <div class="card-header" id="card_header_1">
                Message
            </div>
            <div class="card-body overflow-auto" id="card_body_1" style="height:250px">

            </div>
        </div>

        <div class="form-group">
            <label for="message_box_1">Your Message</label>
            <textarea class="form-control" id="message_box_1" rows="3"></textarea>
        </div>
        <button type="button" class="btn btn-success" onclick="sendMessage()">Send</button>
    </div>    

    <div class="chat-container-channel" style="cursor:pointer">
        <div class="list-group">
            @foreach (var @item in Model.ChannelList)
            {
                <a class="list-group-item list-group-item-action" id="@item.Id" onclick="setChannel()">@item.ChannelName;</a>              
            }
        </div>
       
    </div>
</div>






@{
}
